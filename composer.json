{
    "name": "goldnead/statamic-toc",
    "description": "Automatic Table Of Contents Generator for Statamic Bard-Fields.",
    "type": "statamic-addon",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Goldnead\\StatamicToc\\": "src/"
        }
    },
    "autoload-dev": {
    	"psr-4": {
      		"Goldnead\\StatamicToc\\Tests\\": "tests"
    	}
  	},
    "extra": {
        "statamic": {
            "name": "Statamic ToC",
            "description": "Automatic Table Of Contents Generator for Statamic Bard-Fields."
        },
        "laravel": {
            "providers": [
                "Goldnead\\StatamicToc\\ServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "goldnead",
            "email": "adrian.goldner@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "statamic/cms": "^3.0.23 | ^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^6.23"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
