{
    "name": "goldnead/statamic-toc",
    "description": "Automatic Table Of Contents Generator for Statamic Bard-Fields.",
    "type": "statamic-addon",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Goldnead\\StatamicToc\\": "src/"
        }
    },
    "autoload-dev": {
    	"psr-4": {
      		"Goldnead\\StatamicToc\\Tests\\": "tests"
    	}
  	},
    "extra": {
        "statamic": {
            "name": "Statamic ToC",
            "description": "Automatic Table Of Contents Generator for Statamic Bard-Fields."
        },
        "laravel": {
            "providers": [
                "Goldnead\\StatamicToc\\ServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "goldnead",
            "email": "adrian.goldner@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "laravel/framework": "8.*",
        "orchestra/testbench": "6.23",
        "statamic/cms": "^3.0 || ^3.1 || ^3.2",
        "spatie/test-time": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
        "sort-packages": true,
        "allow-plugins": true
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "lint": [
            "php-cs-fixer fix ./src"
        ]
    }
}
